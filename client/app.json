    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "extra": {
      "JWT_SECRET": "ascefbth,plnihcdxuwy"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
